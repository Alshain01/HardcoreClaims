<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>HardcoreClaims</groupId>
	<artifactId>HardcoreClaims</artifactId>
	<version>2.0.1</version>
	<name>HardcoreClaims</name>
	<description>Grief Prevention extension plugin that deletes claims and restores the land when a player dies.</description>
	<url>http://dev.bukkit.org/bukkit-plugins/hardcoreclaims/</url>

	<repositories>
		<repository>
			<id>bukkit-repo</id>
			<url>http://repo.bukkit.org/content/groups/public/</url>
		</repository>

		<repository>
			<id>flags-snapshot</id>
			<url>http://pages.suddenlink.net/alshain01/flags/snapshot/</url>
		</repository>
	</repositories>

	<dependencies>
		<dependency>
			<groupId>org.bukkit</groupId>
			<artifactId>bukkit</artifactId>
			<version>LATEST</version>
		</dependency>

		<dependency>
			<groupId>me.ryanhamshire.GriefPrevention</groupId>
			<artifactId>GriefPrevention</artifactId>
			<systemPath>${dependencydir}\GriefPrevention-197.jar</systemPath>
			<version>7.8</version>
			<scope>system</scope>
		</dependency>

		<dependency>
			<groupId>io.github.alshain01</groupId>
			<artifactId>Flags</artifactId>
			<version>1.3.0-SNAPSHOT</version>
			<optional>true</optional>
			<exclusions>
				<exclusion>
					<groupId>org.bukkit</groupId>
					<artifactId>bukkit</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
	</dependencies>

	<scm>
		<connection>scm:git:git://github.com/Alshain01/HardcoreClaims.git</connection>
		<developerConnection>scm:git:git@github.com:Alshain01/HardcoreClaims.git</developerConnection>
		<url>https://github.com/Alshain01/HardcoreClaims</url>
		<tag>2.0.0</tag>
	</scm>

	<properties>
		<dependencydir>C:\build_libraries</dependencydir>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<build>
		<defaultGoal>clean package install</defaultGoal>
		<finalName>${project.name}</finalName>
		<sourceDirectory>src/main/java</sourceDirectory>

		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
		</plugins>

		<resources>
			<resource>
				<targetPath>.</targetPath>
				<filtering>true</filtering>
				<directory>${basedir}/src/main/resources</directory>
				<includes>
					<include>plugin.yml</include>
				</includes>
			</resource>
		</resources>
	</build>
</project>
